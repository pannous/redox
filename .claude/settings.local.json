{
  "permissions": {
    "allow": [
      "Bash(qemu-system-aarch64:*)",
      "Bash(ls:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(cp:*)",
      "Bash(qemu-img rebase:*)",
      "Bash(./snapshot.sh:*)",
      "Bash(cat:*)",
      "Bash(/opt/other/redox/mount-redox-mount.sh:*)",
      "Bash(git checkout:*)",
      "Bash(nm:*)",
      "Bash(git submodule:*)",
      "Bash(git push)",
      "Bash(git -C /opt/other/redox log --oneline --since=\"2026-01-09\" --until=\"2026-01-11\" -- .)",
      "Bash(tmux has-session:*)",
      "Bash(cargo:*)",
      "Bash(./build-ion-cranelift.sh)",
      "Bash(./build-cranelift.sh:*)",
      "Bash(RELIBC_FEATURES=\"\" ./build-cranelift.sh:*)",
      "Bash(chmod:*)",
      "Bash(RUSTC_WRAPPER=\"\" cargo build:*)",
      "Bash(./build-initfs-cranelift.sh:*)",
      "Bash(hdiutil attach:*)",
      "Bash(CARGO_INCREMENTAL=0 cargo rustc:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode|Edit|MultiEdit|Write|NotebookEdit|WebFetch|WebSearch|Bash|BashOutput|Read",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/permissions_hook.js",
            "timeout": 300
          }
        ]
      },
      {
        "matcher": "mcp__.*__.*",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/permissions_hook.js",
            "timeout": 300
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=SessionStart $CLAUDE_PROJECT_DIR/.claude/hooks/git-autocommit.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=PostToolUse $CLAUDE_PROJECT_DIR/.claude/hooks/git-autocommit.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=Stop $CLAUDE_PROJECT_DIR/.claude/hooks/git-autocommit.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
